<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="styles/index.css")
        link(rel="stylesheet" href="https://uicdn.toast.com/tui-grid/latest/tui-grid.css")
        script(defer src="https://uicdn.toast.com/tui-grid/latest/tui-grid.js")
        script(defer src="js/index.js")
        title Document
    body
        .wrapper
            .title
                span Awesome Log Lookup
            form(class="conditions")#jsForm
                .condition-date
                    .date-text
                        span DATE
                    .date-input
                        input(type="date" name="toDate" id="toDate")
                        span ~
                        input(type="date" name="fromDate" id="fromDate")
                .condition-api
                    label(for="select" class="api-text") API NAME
                    select(name="api")
                        - let n = 1;
                        ul
                            option(value="") All select
                            while n < 32
                                - const name = 'HSE_IF_' + `${n++}`.padStart(3,'0');
                                option(value=name)=name
                input(type="submit" hidden)#jsSubmit
            .grid
                .gird_colum#jsGrid
                .gird_colum#jsJson
                    span
        //- .data-gird#wrapper
